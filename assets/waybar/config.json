[
  {
    "position": "top",
    "layer": "top",
    "height": 20,

    "modules-left": ["niri/window"],

    "modules-center": ["clock"],
    "clock": { "format": "{:%H:%M:%S}" },

    "modules-right": [
      "idle_inhibitor",
      "pulseaudio",
      "network",
      "backlight",
      "battery",
      "tray",
      "custom/power"
    ],

    "idle_inhibitor": {
      "format": "{icon}",
      "format-icons": {
        "activated": "",
        "deactivated": ""
      }
    },
    "pulseaudio": {
      "format": "{volume}% {icon}",
      "format-bluetooth": "{volume}% {icon}",
      "format-icons": { "default": ["", "", ""] },
      "format-muted": "M ",
      "format-source": "{volume}% ",
      "format-source-muted": "",
      "on-click": "pavucontrol"
    },
    "network": {
      "format-alt": "{ifname}: {ipaddr}/{cidr}",
      "format-disconnected": "disconnected ⚠",
      "format-ethernet": "{ipaddr}/{cidr} 󰊗",
      "format-wifi": "{essid} ({signalStrength}%) ",
      "tooltip-format": "{ifname} via {gwaddr} 󰊗"
    },
    "backlight": {
      "format": "{percent}% {icon}",
      "format-icons": ["", "", "", "", "", "", "", "", ""]
    },
    "battery": {
      "interval": 1,
      "states": {
        "warning": 30,
        "critical": 20
      },
      "format-icons": [" ", " ", " ", " ", " "],
      "format": "{capacity}% {icon}",
      "format-critical": "{capacity}% {icon}",
      "format-warning": "{capacity}% {icon}",
      "format-charging": "{capacity}% {icon}",
      "format-charging-warning": "{capacity}% {icon}",
      "format-charging-critical": "{capacity}% {icon}",
      "format-alt": "{icon} {time}",
      "tooltip": false
    },
    "tray": { "spacing": 10 },
    "custom/power": {
      "format": "⏻ ",
      "on-click": "wlogout"
    }
  }
]
